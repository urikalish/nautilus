{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": ["src/**/*.ts"],
  "exclude": [
    "dist",
    "node_modules",
  ],
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "tsc",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
  }
}
